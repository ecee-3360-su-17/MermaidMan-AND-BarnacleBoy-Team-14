/*int fib(int n){
    if(n == 0){         //Short pulse
        return n;
    }
    else if(n == 1){    //Long pulse
        return n;
    }
    else
        return fib(n-1) + fib(n-2);
}*/

.syntax unified
.cpu cortex-m0
.align 2
.global asm_sum
.thumb
.thumb_func

Fib:
	cmp r1, #0
	bgt case_two
	mov r0, 0
	mov pc, lr

case_two:
	cmp r1, #1
	bgt return
	mov r0, 1
	mov pc, lr

return:
	push{r0}

